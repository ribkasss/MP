<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bgyoutube"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/acount"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"/>
            <ImageView
                android:background="@drawable/youtube"
                android:layout_width="70dp"
                android:layout_height="60dp"/>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"/>
            <Button
                android:background="@drawable/search"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Watch This Now!"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/left_arrow"/>

        <VideoView
            android:id="@+id/videoView"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <Button
            android:background="@drawable/right_arrow"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="2dp"
            android:layout_width="22dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Shorts"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="200dp"/>

        <VideoView
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="200dp"/>

        <VideoView
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="200dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Your Subcription"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <VideoView
            android:id="@+id/videoView1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/home"
            android:layout_width="45dp"
            android:layout_height="50dp"/>

        <Button
            android:background="@drawable/add"
            android:layout_marginLeft="90dp"
            android:layout_width="45dp"
            android:layout_height="50dp"/>
        <Button
            android:background="@drawable/sharescreen"
            android:layout_marginLeft="90dp"
            android:layout_width="45dp"
            android:layout_height="50dp"/>
        <Button
            android:background="@drawable/library"
            android:layout_marginLeft="80dp"
            android:layout_width="45dp"
            android:layout_height="50dp"/>

    </LinearLayout>




</LinearLayout>